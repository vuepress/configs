{
  "name": "@vuepress/configs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "check-types": "tsc --noEmit --skipLibCheck",
    "clean": "pnpm -r run clean",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "prepare": "husky",
    "release": "pnpm release:check && pnpm release:version",
    "release:check": "pnpm clean && pnpm build && pnpm lint && pnpm check-types",
    "release:version": "lerna version"
  },
  "lint-staged": {
    "!(test)/**/*.(js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(test)/**/*.!(js)": "prettier --write --ignore-unknown",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@commitlint/cli": "catalog:dev",
    "@commitlint/config-conventional": "catalog:dev",
    "@commitlint/types": "catalog:dev",
    "@lerna-lite/cli": "catalog:dev",
    "@lerna-lite/publish": "catalog:dev",
    "@types/node": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-config-vuepress": "workspace:*",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "prettier": "catalog:dev",
    "prettier-config-vuepress": "workspace:*",
    "rimraf": "catalog:dev",
    "sort-package-json": "catalog:dev",
    "tsconfig-vuepress": "workspace:*",
    "typescript": "catalog:dev"
  },
  "packageManager": "pnpm@10.29.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
